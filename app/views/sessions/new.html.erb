<h1>Log In</h1>

<%= form_with model: @user, url: session_path do |form| %>

  <div>
    <%= form.label :email %>
    <%= form.email_field :email, required: true %>
  </div>

  <div>
    <%= form.label :password %>
    <%= form.password_field :password, required: true %>
  </div>

  <div>
    <%= form.submit 'Log In' %>
  </div>
<% end %>

<%= link_to 'Forgot password?', new_password_reset_path %>
